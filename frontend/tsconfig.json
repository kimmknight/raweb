{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "$components": ["./lib/components/index.mjs"],
      "$components/MenuFlyout": ["./lib/components/MenuFlyout/index.mjs"],
      "$components/*": ["./lib/components/*"],
      "$icons": ["./lib/assets/icons.ts"],
      "$utils/transitions": ["./lib/utils/transitions/index.mjs"],
      "$utils/transitions/*": ["./lib/utils/transitions/*"],
      "$utils": ["./lib/utils/index.mjs"],
      "$utils/*": ["./lib/utils/*"],
      "$stores": ["./lib/stores/index.mjs"],
      "$stores/*": ["./lib/stores/*"],
      "$dialogs": ["./lib/dialogs/index.mjs"],
      "$dialogs/*": ["./lib/dialogs/*"]
    },
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "lib": ["WebWorker", "ES2023", "DOM", "DOM.Iterable", "ScriptHost"]
  },
  "include": ["./**/*", "lib/public/service-worker.js"],
  "exclude": ["node_modules"]
}
